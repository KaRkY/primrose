type Address {
  id: ID!
  street: String!
  streetNumber: String!
  city: String!
  postalCode: String!
  state: String
  country: String!
}

type TypedAddress {
  addresses: [Address]!
  type: String!
}

type Customer {
  id: ID!
  type: String!
  relationType: String!
  fullName: String!
  displayName: String
  email: String!
  phone: String
  description: String
  addresses: [TypedAddress]
  accounts: [Account]
}

type Account {
  id: ID!
  name: String!
  customer: Customer!
  addresses: [TypedAddress]
}

enum SortDirection {
  ASC
  DESC
  DEFAULT
}

input PropertySort {
  propertyName: String!
  direction: SortDirection
}

input Pageable {
  pageNumber: Int!
  pageSize: Int!
}

scalar LocalDateTime

# The Root Query for the application
type Query {
    customers(pageable: Pageable, sort: [PropertySort]): [Customer]!
    customer(id: ID!): Customer!
    customersCount: Int!
    accounts(customer: ID!, pageable: Pageable, sort: [PropertySort]): [Account]!
    accountsCount(customer: ID!): Int!
}

type Mutation {
  deleteCustomers(ids: [ID]!): [ID]!
}
